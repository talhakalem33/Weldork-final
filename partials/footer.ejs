<!-- Footer Start -->
<div class="container-fluid bg-dark footer py-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container py-5">
        <div class="row g-5">
            <div class="col-lg-3 col-md-6">
                <h5 class="text-uppercase text-light mb-4">Contact</h5>

                <% if (settings.location && settings.location.trim() !== '') { %>
                    <p class="mb-2">
                        <a href="<%= settings.location %>" class="text-decoration-none">
                            <i class="fa fa-map-marker-alt text-primary me-3"></i>
                        </a>
                    </p>
                <% } %>

                <% if (settings.phoneNumber && settings.phoneNumber.toString().trim() !== '') { %>
                    <p class="mb-2"><i class="fa fa-phone-alt text-primary me-3"></i><%= settings.phoneNumber %></p>
                <% } %>

                <% if (settings.Email && settings.Email.trim() !== '') { %>
                    <p class="mb-2"><i class="fa fa-envelope text-primary me-3"></i><%= settings.Email %></p>
                <% } %>

                <div class="d-flex pt-3">
                    <% if (settings.twitter && settings.twitter.trim() !== '') { %>
                        <a class="btn btn-square btn-light me-2" href="<%= settings.twitter %>">
                            <i class="fa-brands fa-x-twitter"></i>
                        </a>
                    <% } %>

                    <% if (settings.facebook && settings.facebook.trim() !== '') { %>
                        <a class="btn btn-square btn-light me-2" href="<%= settings.facebook %>">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                    <% } %>

                    <% if (settings.youtube && settings.youtube.trim() !== '') { %>
                        <a class="btn btn-square btn-light me-2" href="<%= settings.youtube %>">
                            <i class="fa-brands fa-youtube"></i>
                        </a>
                    <% } %>

                    <% if (settings.instagram && settings.instagram.trim() !== '') { %>
                        <a class="btn btn-square btn-light me-2" href="<%= settings.instagram %>">
                            <i class="fa-brands fa-instagram"></i>
                        </a>
                    <% } %>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <h5 class="text-uppercase text-light mb-4">Quick Links</h5>

                <% if (settings.isAboutOn) { %>
                    <a class="btn btn-link" href="about">About Us</a>
                <% } %>

                    <a class="btn btn-link" href="contact">Contact Us</a>

                <% if (settings.isAppoinmentOn) { %>
                    <a class="btn btn-link" href="appoinment">Appoinment</a>
                <% } %>
            </div>
        </div>
    </div>
</div>
<!-- Footer End -->
