<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title><%= settings.brandName %> | <%= content.pageTitle || 'Ana Sayfa' %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="keywords" content="<%= content.metaKeywords || 'hizmet, randevu, iletişim, firma adı' %>">
    <meta name="description" content="<%= content.metaDescription || (settings.brandName + ' resmi web sitesi. Hakkımızda bilgi alın, randevu oluşturun ve bizimle iletişime geçin.') %>">

    <!-- Canonical URL -->
    <link rel="canonical" href="<%= settings.baseUrl %>">

    <!-- Open Graph Meta Tags (Facebook, LinkedIn) -->
    <meta property="og:type" content="website">
    <meta property="og:url" content="<%= settings.baseUrl %>">
    <meta property="og:title" content="<%= settings.brandName %>">
    <meta property="og:description" content="<%= content.metaDescription || 'Resmi web sitemizden randevu alın ve hizmetlerimizi keşfedin.' %>">
    <meta property="og:image" content="<%= settings.baseUrl %>/img/<%= content.carouselImage %>">

    <!-- Twitter Card Meta -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="<%= settings.brandName %>">
    <meta name="twitter:description" content="<%= content.metaDescription || 'Kaliteli hizmet için doğru adres!' %>">
    <meta name="twitter:image" content="<%= settings.baseUrl %>/img/<%= content.carouselImage %>">

    <!-- Favicon -->
    <link href="/img/<%= settings.favicon %>" rel="icon">
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&family=Roboto:wght@700;800&display=swap" rel="stylesheet">

    <!-- Icon Fonts -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.4/font/bootstrap-icons.css">

    <!-- Libraries Stylesheet -->
    <link href="lib/animate/animate.min.css" rel="stylesheet">
    <link href="lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- CSS -->
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link href="css/style.css" rel="stylesheet">

    <!-- Structured Data (Schema.org JSON-LD) -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": "<%= settings.brandName %>",
      "url": "<%= settings.baseUrl %>",
      "logo": "<%= settings.baseUrl %>/img/<%= settings.favicon %>",
      "sameAs": [
        "<%= settings.socialMedia.facebook %>",
        "<%= settings.socialMedia.instagram %>",
        "<%= settings.socialMedia.twitter %>"
      ]
    }
    </script>
</head>

<body>


    <%- include('../../partials/topbar', settings) %> 
    <%- include('../../partials/navbar', settings) %>


    <% if (settings.isCarouselOn) { %>
    <!-- Carousel Start -->
    <div class="container-fluid p-0 mb-6 wow fadeIn" data-wow-delay="0.1s">
        <div id="header-carousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="w-100" src="/img/<%= content.carouselImage %>" alt="Image">
                    <div class="carousel-caption">
                        <h1 class="display-1 text-uppercase text-white mb-4 animated zoomIn"><%= content.carouselTitle %>
                        </h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Carousel End -->
    <% } %>


    <% if (settings.isAboutOn && settings.isAboutMain) { %>
    <!-- About Start -->
    <div class="container-fluid py-6" id="about">
        <div class="container">
            <div class="row align-items-center g-5">
                <div class="col-lg-6">
                    <div class="position-relative about-img-animated">
                        <img class="img-fluid w-100 rounded-3 shadow" src="/img/<%= content.aboutImage %>" alt="About">
                    </div>
                </div>
                <div class="col-lg-6">
                    <h2 class="text-uppercase text-primary mb-3"><i class="fas fa-info-circle me-2"></i>Hakkımızda</h2>
                    <h1 class="display-6 mb-4 fw-bold"><%= content.aboutTitle %></h1>
                    <p class="mb-4"><%= content.aboutDescription %></p>
                    <div class="bg-light border-start border-5 border-primary ps-4 py-3 shadow-sm rounded">
                        <h5 class="text-uppercase mb-0 text-dark"><i class="fas fa-quote-left me-2 text-primary"></i><%= content.aboutSlogan %></h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- About End -->
    <% } %>

    <% if (settings.isAppoinmentOn && settings.isAppoinmentMain) { %>
    <!-- Appoinment Start -->
    <form method="post" action="/appoinment">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <div class="container-fluid bg-light py-6 pb-7 mt-6" id="appointment">
            <div class="container">
                <div class="row g-5 align-items-center">
                    <div class="col-lg-6">
                        <h2 class="text-uppercase text-primary mb-3"><i class="fa-solid fa-calendar-check me-2"></i>Randevu Al</h2>
                        <h1 class="display-6 mb-3 fw-bold"><%= content.appoinmentTitle %></h1>
                        <p class="mb-4"><%= content.appoinmentDescription %></p>
                        <ul class="list-unstyled text-dark">
                            <li><i class="fa-solid fa-clock text-primary me-2"></i>Hafta içi: 09:00 - 18:00</li>
                            <li><i class="fa-solid fa-phone text-primary me-2"></i>Telefon: 0xxx xxx xx xx</li>
                        </ul>
                    </div>
                    <div class="col-lg-6">
                        <div class="bg-white p-4 rounded shadow-sm">
                            <div class="row g-3">
                                <div class="col-12 col-sm-6">
                                    <input type="text" class="form-control border-0 bg-light rounded" name="name" placeholder="Adınız" required>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <input type="email" class="form-control border-0 bg-light rounded" name="mail" placeholder="E-posta" required>
                                </div>
                                <div class="col-12">
                                    <textarea name="message" class="form-control border-0 bg-light rounded" rows="4" placeholder="Mesajınız" required></textarea>
                                </div>
                                <div class="col-12">
                                    <button class="btn btn-primary w-100 py-3 text-uppercase fw-bold" type="submit">
                                        Randevu Gönder
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <!-- Appoinment End --><% } %>

    <% if (settings.isNewsletterOn && settings.isNewsletterMain) { %>
    <!-- Newsletter Start -->
    <form method="post" action="/">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <div class="container-fluid newsletter mt-6 wow fadeIn" data-wow-delay="0.1s">
            <div class="container pb-5">
                <div class="bg-white p-5 mb-5">
                    <div class="row g-5">
                        <div class="col-md-6 wow fadeIn" data-wow-delay="0.3s">
                            <h1 class="display-6 text-uppercase mb-4">Newsletter</h1>
                            <div class="d-flex">
                                <i class="far fa-envelope-open fa-3x text-primary me-4"></i>
                                <p class="fs-5 fst-italic mb-0"><%= content.newsletterDescription %></p>
                            </div>
                        </div>
                        <div class="col-md-6 wow fadeIn" data-wow-delay="0.5s">
                            <div class="form-floating mb-3">
                                <input type="email" class="form-control border-0 bg-light" name="email" id="email" placeholder="Your Email">
                                <label for="mail">Your Email</label>
                            </div>
                            <button class="btn btn-primary w-100 py-3" type="submit">Submit Now</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <!-- Newsletter Start --><% } %>


    <%- include('../../partials/footer', settings) %>
    <%- include('../../partials/copyright') %>


    <!-- Back to Top -->
    <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i
            class="bi bi-arrow-up"></i></a>


    <!-- JavaScript Libraries -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="lib/wow/wow.min.js"></script>
    <script src="lib/easing/easing.min.js"></script>
    <script src="lib/waypoints/waypoints.min.js"></script>
    <script src="lib/counterup/counterup.min.js"></script>
    <script src="lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Template Javascript -->
    <script src="js/main.js"></script>
</body>

</html>