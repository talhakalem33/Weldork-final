<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Items</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="<%= item.itemTitle %>" name="keywords">
    <meta content="Item page of <%= settings.brandName %>" name="description">

    <!-- Favicon -->
    <link href="/img/<%= settings.favicon %>" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&family=Roboto:wght@700;800&display=swap"
        rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.4/font/bootstrap-icons.css">

    <!-- Libraries Stylesheet -->
    <link href="lib/animate/animate.min.css" rel="stylesheet">
    <link href="lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="/css/style.css" rel="stylesheet">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"/>
    <link href="https://cdn.jsdelivr.net/npm/lightbox2@2.11.4/dist/css/lightbox.min.css" rel="stylesheet">

    <style>
        .item-title {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 1.5rem;
            text-align: center;
        }

        .badge {
            font-size: 1rem;
            padding: 0.6rem 1.2rem;
            border-radius: 2rem;
        }

        .custom-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.4rem;
            font-size: 1rem;
            font-weight: 600;
            padding: 0.5rem 1.2rem;
            border-radius: 30px;
            color: #fff;
            box-shadow: 0 3px 10px rgba(0, 0, 0, 0.15);
            margin: 0.25rem;
            transition: transform 0.2s ease-in-out;
        }

        .custom-badge.rent {
            background: linear-gradient(135deg, #fbb034, #ffdd00); /* Sarı gradient */
            color: #333;
        }

        .custom-badge.sale {
            background: linear-gradient(135deg, #28a745, #218838); /* Yeşil gradient */
        }

        .custom-badge i {
            font-size: 1rem;
        }

        .description-box {
            background-color: #f8f9fa;
            padding: 2rem;
            border-radius: 1rem;
            box-shadow: 0 0 15px rgba(0,0,0,0.05);
        }

        .description-box h5 {
            color: #444;
            font-weight: 400;
        }

        .description-box a {
            font-weight: 600;
        }

        .mainSwiper {
            max-height: 400px;
            margin-bottom: 1rem;
        }

        .mainSwiper .swiper-slide img {
            max-height: 400px;
            object-fit: contain;
        }

        .thumbSwiper {
            max-height: 100px;
            margin-top: 0.5rem;
        }

        .thumbSwiper .swiper-slide img {
            max-height: 100px;
            object-fit: contain;
        }

        .thumbSwiper .swiper-slide {
            opacity: 0.4;
            cursor: pointer;
        }

        .thumbSwiper .swiper-slide-thumb-active {
            opacity: 1;
            border: 2px solid #007bff;
        }
        .mainSwiper .swiper-slide,
        .thumbSwiper .swiper-slide {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .swiper-slide img {
            width: auto;
            max-width: 100%;
            height: auto;
            max-height: 100%;
            object-fit: contain;
        }
    </style>
</head>

<body>


    <%- include('../../partials/topbar', settings) %> 
    <%- include('../../partials/navbar', settings) %>


    <section class="container py-5">
        <div class="row justify-content-center mb-4">
            <div class="col-12">
                <h1 class="item-title animated slideInDown"><%= item.itemTitle %></h1>
            </div>

            <!-- Swiper Images (Main & Thumbnail) -->
            <div class="col-12">
                <div class="swiper mainSwiper mb-3">
                    <div class="swiper-wrapper">
                        <div class="swiper-slide">
                            <a href="/img/<%= item.itemFrontImage %>" data-lightbox="item-gallery">
                                <img src="/img/<%= item.itemFrontImage %>" class="img-fluid" />
                            </a>
                        </div>
                        <% if (item.itemImage && item.itemImage.length > 0) { %>
                            <% item.itemImage.forEach(img => { %>
                                <div class="swiper-slide">
                                    <a href="/img/<%= img %>" data-lightbox="item-gallery">
                                        <img src="/img/<%= img %>" class="img-fluid" />
                                    </a>
                                </div>
                            <% }) %>
                        <% } %>
                    </div>
                </div>

                <div class="swiper thumbSwiper">
                    <div class="swiper-wrapper">
                        <div class="swiper-slide">
                            <img src="/img/<%= item.itemFrontImage %>" class="img-fluid" />
                        </div>
                        <% if (item.itemImage && item.itemImage.length > 0) { %>
                            <% item.itemImage.forEach(img => { %>
                                <div class="swiper-slide">
                                    <img src="/img/<%= img %>" class="img-fluid" />
                                </div>
                            <% }) %>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>

        <!-- Item Type -->
        <div class="row justify-content-center mb-4">
            <% if (item.isRent) { %>
                <div class="col-auto">
                    <span class="custom-badge rent">
                        <i class="fas fa-key me-2"></i> Kiralık
                    </span>
                </div>
            <% } %>
            <% if (item.isSale) { %>
                <div class="col-auto">
                    <span class="custom-badge sale">
                        <i class="fas fa-tag me-2"></i> Satılık
                    </span>
                </div>
            <% } %>
        </div>

        <!-- Description -->
        <div class="row justify-content-center">
            <div class="col-lg-9">
                <div class="description-box wow fadeIn" data-wow-delay="0.1s">
                    <h5><%- item.itemDescription %></h5>
                    <hr>
                    <h4><a href="/contact" class="text-decoration-none text-primary">Daha fazla bilgi için bizimle iletişime geçin</a></h4>
                </div>
            </div>
        </div>
    </section>



    <%- include('../../partials/footer', settings) %>
    <%- include('../../partials/copyright') %>

    <!-- Back to Top -->
    <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i
            class="bi bi-arrow-up"></i></a>


    <!-- JavaScript Libraries -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/lib/wow/wow.min.js"></script>
    <script src="/lib/easing/easing.min.js"></script>
    <script src="/lib/waypoints/waypoints.min.js"></script>
    <script src="/lib/counterup/counterup.min.js"></script>
    <script src="/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/lightbox2@2.11.4/dist/js/lightbox.min.js"></script>

    <!-- Template Javascript -->
    <script src="js/main.js"></script>

    <script>
        var thumbSwiper = new Swiper(".thumbSwiper", {
            spaceBetween: 10,
            slidesPerView: 4,
            freeMode: true,
            watchSlidesProgress: true,
            breakpoints: {
            768: {
                slidesPerView: 6,
            },
            },
        });

        var mainSwiper = new Swiper(".mainSwiper", {
            spaceBetween: 10,
            navigation: {
            nextEl: ".swiper-button-next",
            prevEl: ".swiper-button-prev",
            },
            thumbs: {
            swiper: thumbSwiper,
            },
        });
    </script>
</body>

</html>